<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.IntroActivity">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="프리텐다드 20포인트 행간 30"
        android:fontFamily="@font/pretendardbold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="서브타이틀도 같으나, 오퍼시티가 30"
        android:textColor="#4D000000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="최대 2줄까지 입력가능합니다."
        android:textColor="#4D000000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <ImageButton
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:id="@+id/kakao_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_wide"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/google_login_button"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/google_login"
        android:background="@android:color/transparent"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/kakao_login_button">


        <TextView
            android:id="@+id/email_login_btn"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="이메일로 계속하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:text="가입 시, 살림요정의 이용약관과 개인정보 취급방침에 동의하게 돼요."
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>