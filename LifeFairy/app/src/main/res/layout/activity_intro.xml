<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.IntroActivity">

    <ImageButton
        android:layout_marginTop="400dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:id="@+id/kakao_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_wide"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/google_login_button"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/google_login"
        android:background="@android:color/transparent"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/kakao_login_button">

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="또는"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/email_login_btn"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="이메일로 계속하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:text="가입 시, 살림요정의 이용약관과 개인정보 취급방침에 동의하게 돼요."
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

</LinearLayout>